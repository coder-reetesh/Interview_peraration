/******************************************************************************
Find a given number is prime or not
*******************************************************************************/
#include <stdio.h>

int main() 
  {
    int num, i, isPrime = 1;

    printf("Enter a number: ");
    scanf("%d", &num);

    // 0 and 1 are not prime
    if (num <= 1)
    {
        isPrime = 0;
    } 
    else
    {
        for (i = 2; i < num; i++) 
      {
        if (num % i == 0)
        {
           isPrime = 0;
           break;
        }
      }
    }

    if (isPrime)
        printf("%d is a Prime number\n", num);
    else
        printf("%d is NOT a Prime number\n", num);

    return 0;
}
