/******************************************************************************
Swap two number without using any extra veriable (Use Bit-wise Operator)
*******************************************************************************/
int main() {
    int n,x;

    printf("Enter a number: ");
    scanf("%d", &n);
    
    printf("Enter a number: ");
    scanf("%d", &x);

    n=n^x;
    x=n^x;
    n=n^x;
    
    printf("Enter a number: n=%d x= %d",n,x);

    return 0;
}
